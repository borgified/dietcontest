<VirtualHost *:80>
	ServerAdmin webmaster@localhost

	DocumentRoot /home/jctong/scripts/dietcontest/html
	<Directory />
		Options FollowSymLinks
		AllowOverride None
	</Directory>
	<Directory /home/jctong/scripts/dietcontest/html>
		Options Indexes FollowSymLinks MultiViews
		AllowOverride None
		Order allow,deny
		allow from all
	</Directory>

	ScriptAlias /cgi-bin/ /home/jctong/scripts/dietcontest/cgi-bin/
	<Directory "/home/jctong/scripts/dietcontest/cgi-bin">
		AllowOverride None
		Options +ExecCGI -MultiViews +SymLinksIfOwnerMatch
		Order allow,deny
		Allow from all
	</Directory>

	ErrorLog ${APACHE_LOG_DIR}/error_dietcontest.log

	# Possible values include: debug, info, notice, warn, error, crit,
	# alert, emerg.
	LogLevel warn

	CustomLog ${APACHE_LOG_DIR}/access_dietcontest.log combined

</VirtualHost>
